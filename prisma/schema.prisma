// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model School {
  id        String   @id @default(uuid())
  ncesId    String?  @unique
  name      String
  address   String?
  city      String?
  state     String?
  zip       String?
  type      String?
  level     String?
  latitude  Float?
  longitude Float?
  url       String?
  country   String   @default("US")
  currency  String   @default("USD")

  metrics   Metric[]
  rankingEntries RankingEntry[]

  createdAt DateTime @default(now())
}

model Metric {
  id        String   @id @default(uuid())
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  category  String
  name      String
  value     Float
  year      Int
  source    String

  createdAt DateTime @default(now())
}

model RankingEntry {
  id        String   @id @default(uuid())
  
  // Raw data from the CSV
  name      String   // "Harvard University"
  country   String?
  rank      Int      // 1
  score     Float?   // 99.9
  year      Int
  source    String   // "CWUR"
  
  // Sub-rankings (Generic JSON or specific fields? Specific is cleaner for sorting)
  educationRank  Int?
  employabilityRank Int?
  facultyRank    Int?
  researchRank   Int?

  // Comparison/Linkage
  schoolId  String?
  school    School?  @relation(fields: [schoolId], references: [id])

  createdAt DateTime @default(now())

  @@unique([source, year, rank]) // Ensure uniqueness per list
  @@index([source, year])
}
